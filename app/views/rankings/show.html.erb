<%= render partial: 'shared/menu', locals: { s: 'ranking' } %>
<h2>
  <i class="fa fa-trophy"></i>
  Ranking
</h2>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4 col-xs-12 col-xs-offset-0 col-sm-6 col-sm-offset-3">
      <ul class="list-group">
        <% @users.each do |user| %>
          <% position = @points.index(user.points) %>
          <li class="list-group-item <%= 'active' if Current.user == user %>">
            <%= "#{position + 1}. " %>
            <%= user.username %>
            <strong class="pull-right"><%= number_with_precision(user.points) %></strong>
            <div class="clearfix"></div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
