      %ul.nav.navbar-nav
        %li{class: ('active' if s == 'info')}
          = link_to home_path do
            %i.fa.fa-info
            Informacje
        %li{class: ('active' if s == 'matches')}
          = link_to matches_path do
            %i.fa.fa-futbol
            Mecze
        %li{class: ('active' if s == 'ranking')}
          = link_to ranking_path do
            %i.fa.fa-trophy
